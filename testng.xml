<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">
    <!-- Define parallel test execution -->
    <test thread-count="5" name="Test">
		<groups>
			<define name="Sanity Testing">
				<include name="smoke"></include>
				<include name="Regression"></include>
			</define>
			<run>
				<include name="Sanity Testing"></include>
			</run>
		</groups>
        <classes>
					<class name="com.tests.AnnotationsDemo"></class>
					<class name="com.tests.GroupsDemo"></class>
			
        </classes>
    </test>
</suite> <!-- Suite -->
